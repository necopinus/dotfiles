{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Bash(sudo *)",
      "Read(~/data)",
      "Read(~/Library)",
      "Read(//mnt)",
      "Read(~/notes)",
      "Read(//Volumes)",
      "Write(~/data)",
      "Write(~/Library)",
      "Write(//mnt)",
      "Write(~/notes)",
      "Write(//Volumes)"
    ],
    "ask": [
      "Bash(rm *)"
    ],
    "allow": [
      "Bash(ls *)"
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": false,
    "network": {
      "allowedDomains": [],
      "allowUnixSockets": [],
      "allowLocalBinding": true
    },
    "excludedCommands": []
  },
  "alwaysThinkingEnabled": true,
  "outputStyle": "Explanatory"
}
