#!/usr/bin/env -S bash -l

# NOTE: Bash is called above as a login shell using the -l flag to force
# /etc/profile and ~/.profile to be read, since this script may get
# called by GUI processes where the full shell environment (including
# Homebrew's path) hasn't been initialized

set -e

if [[ -x /usr/bin/gpg-connect-agent ]]; then
	exec /usr/bin/gpg-connect-agent "$@"
else
	OLD_PATH="$PATH"
	export PATH="$(echo ":$PATH:" | sed "s#:$HOME/bin:#:#;s#:$HOME/local/bin:#:#;s#:$HOME/.local/bin:#:#;s#^:##;s#:\$##")"

	GPG_CONNECT_AGENT_BIN="$(which gpg-connect-agent)"

	export PATH="$OLD_PATH"
	unset OLD_PATH

	if [[ -x "$GPG_CONNECT_AGENT_BIN" ]]; then
		exec "$GPG_CONNECT_AGENT_BIN" "$@"
	fi
fi
